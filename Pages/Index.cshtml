@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Name</h1>

        <form method="post">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label asp-for="Address.Street"></label>
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                    <input asp-for="Address.Street" class="form-control" /><br />
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Address.Number"></label>
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                    <input asp-for="Address.Number" class="form-control" /><br />
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Address.ZipCode"></label>
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                    <input asp-for="Address.ZipCode" class="form-control" /><br />
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Address.City"></label>
                    <span asp-validation-for="Address.Street" class="text-danger"></span>
                    <input asp-for="Address.City" class="form-control" /><br />
                </div>
            </div>

            <button type="submit">Submit</button>

        </form>

    </div>
